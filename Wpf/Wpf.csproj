		<None Remove="Resources\Fonts\Montserrat-Thin.ttf" />
		<None Remove="Resources\Fonts\Montserrat-ThinItalic.ttf" />
		<None Remove="Resources\Fonts\Montserrat-VariableFont_wght.ttf" />
		<None Remove="Resources\Images\background.png" />
		<None Remove="Resources\Images\favicon.ico" />
		<None Remove="Resources\Images\logo.png" />
	</ItemGroup>
	<ItemGroup>
		<Content Include="Resources\Images\favicon.ico" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
		<PackageReference Include="FontAwesome5" Version="2.1.11" />
		<PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.122" />
